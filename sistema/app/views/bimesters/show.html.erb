<div class="container-fluid">
     <div class="animated fadeIn">
         <div class="row">
            <p id="notice"><%= notice %></p>
            <div class="col-sm-8 col-md-6">
                <div class="card card-inverse card-primary text-xs-center">
                    <div class="card-header">
                      Bimestre
                  </div>
                      <div class="card-blockquote">
                        <p>
                          <strong>Bimestre:</strong>
                          <%= @bimester.bimestre %>
                        </p>

                        <p>
                          <strong>Period:</strong>
                          <%= @bimester.period %>
                        </p>

                      </div>
                  </div>
              </div>
           </div>
            <div class="row">
                <%= link_to 'Editar', edit_bimester_path(@bimester), class: "btn btn-sm btn-primary" %>
                <%= link_to 'Back', bimesters_path,class: "btn btn-sm btn-danger" %>
             </div>
        </div>
    </div>
