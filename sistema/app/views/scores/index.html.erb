<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <p id="notice"><%= notice %></p>
            <div class="col-lg-12">
                <h1>Calificaciones</h1>
                <div class="card">
                  <div class="card-block">
                      <table class="table table-bordered table-striped table-condensed">
                <thead>
                  <tr>
                    <th>Calificacion</th>
                    <th>Materia</th>
                    <th>Bimestre</th>
                    <th>Alumno</th>
                    <th colspan="3">Opciones</th>
                  </tr>
                </thead>

            <tbody>
              <% @scores.each do |score| %>
                <tr>
                  <td><%= score.calificacion %></td>
                  <td><%= score.subject %></td>
                  <td><%= score.bimester %></td>
                  <td><%= score.student %></td>
                  <td><%= link_to  score do %>
                    <button class="btn btn-success"><i class=" fa fa-check"></i></button>
                    <% end %>
                  </td>

                  <td><%= link_to edit_score_path(score) do%>
                    <button class="btn btn-primary"><i class="fa fa-pencil"></i></button>
                    <% end %>
                  </td>
                  <td><%= link_to  score, method: :delete, data: { confirm: 'Are you sure?' } do%>
                    <button class="btn btn-danger"><i class="fa fa-trash-o "></i></button>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

        </div>
        </div>
        </div>
        </div>
        </div>
        </div>
    <div class="card-header">
<%= link_to 'Nueva calificacion', new_score_path , class: "btn btn-primary" %>
</div>
